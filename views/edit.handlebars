<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">名稱</label>
    <input type="text" name="name" id="name" value="{{record.name}}" required>
  </div>

  <div class="form-group">
    <label for="date">日期</label>
    <input type="date" name="date" id="date" value="{{record.date}}" required>
  </div>

  <div class="form-group">
    <label for="category">類別</label>
    <select name="category" id="category">
      {{#each categoryFilters}}
        <option value="{{this.value}}" {{#if (isEqual ../record.category this.value)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  
  <div class="form-group">
    <label for="amount">金額</label>
    <input type="text" name="amount" id="amount" value="{{record.amount}}" required>
  </div>

  <button type="submit">送出</button>
</form>