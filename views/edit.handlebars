<form action="/records/{{record._id}}/edit" method="POST">
  <div class="form-group">
    <label for="name">名稱</label>
    <input type="text" name="name" id="name" value="{{record.name}}" required>
  </div>

  <div class="form-group">
    <label for="date">日期</label>
    <input type="date" name="date" id="date" value="{{record.date}}" required>
  </div>

  <div class="form-group">
    <label for="category">類別</label>
    <select name="category" id="category">
      <option value="household" {{#if (isEqual record.category "家居物業")}}selected{{/if}}>家居物業</option>
      <option value="traffic" {{#if (isEqual record.category "交通出行")}}selected{{/if}}>交通出行</option>
      <option value="entertainment" {{#if (isEqual record.category "休閒娛樂")}}selected{{/if}}>休閒娛樂</option>
      <option value="food" {{#if (isEqual record.category "餐飲食品")}}selected{{/if}}>餐飲食品</option>
      <option value="other" {{#if (isEqual record.category "其他")}}selected{{/if}}>其他</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="amount">金額</label>
    <input type="text" name="amount" id="amount" value="{{record.amount}}" required>
  </div>

  <button type="submit">送出</button>
</form>